<% if @post.errors.any? %>
<h3><%= pluralize(@post.errors.count, "error") %> in form, please correct before saving.</h3>
<ul> 
  <% @post.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>


<%= form_for @post do |f| %>
<div class="form-group">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, :html => {:class => "form-control"} %>
  </div>
  <div class="form-group">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body, :html => {:class => "form-control"} %>
  </div>
  <%= f.submit :disable_with => 'Submiting...' %>
<% end %>