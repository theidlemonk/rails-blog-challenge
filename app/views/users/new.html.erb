<h1>Create a Profile</h1>

<%= form_for @user do |f| %>
  <p><%= f.label :first_name, "First Name" %>
  <%= f.text_field :first_name %></p>
  <p><%= f.label :last_name, "Last_Name" %>
  <%= f.text_field :last_name %></p>
  <p><%= f.label :username, "Username" %>
  <%= email_field("user", "username", placeholder: "  . . . Email . . .") %></p>
  <p><%= f.label :password, "Password" %>
  <%= f.password_field :password %></p>
  <p><%= f.submit :disable_with => 'Creating profile...' %></p>
<% end %>

<% if @user.errors.any? %>
<h3><%= pluralize(@user.errors.count, "error") %> in form, please correct them before saving.</h3>
<ul> 
  <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>